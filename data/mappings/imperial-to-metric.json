  "weight": {
    "_note": "For solid ingredients - convert to grams (g)",
    "units": {
      "oz": {
        "to_grams": 28.35,
        "example": "4 oz chicken = 113g chicken"
      },
      "lb": {
        "to_grams": 454,
        "example": "1 lb beef = 454g beef"
      },
      "grain": {
        "to_mg": 65,
        "note": "Pharmaceutical/supplement use only"
      }
    }
  },
  
  "volume": {
    "_note": "For liquid ingredients - convert to millilitres (mL)",
    "units": {
      "fl_oz": {
        "to_ml": 29.57,
        "example": "8 fl oz water = 237mL water"
      },
      "tsp": {
        "us_to_ml": 4.93,
        "au_standard_ml": 5,
        "note": "US teaspoon ≈ 5mL (rounded for practical use)"
