      "tbsp": {
        "us_to_ml": 14.79,
        "au_standard_ml": 20,
        "note": "CRITICAL: US tablespoon ≈ 15mL, AU tablespoon = 20mL. When converting US recipes, use 15mL not 20mL.",
        "conversion_factor": 0.75,
        "example": "1 US Tbsp = 15mL = 0.75 AU Tbsp"
      },
      "cup": {
        "us_to_ml": 236.6,
        "au_standard_ml": 250,
        "note": "US cup ≈ 237mL, AU cup = 250mL. Use 240mL as practical US conversion.",
